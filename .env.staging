# Staging Environment Configuration
NODE_ENV=staging

# API Configuration
VITE_API_URL=https://staging-api.editorial-app.com
VITE_API_TIMEOUT=10000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/editorialdata_staging
DATABASE_SSL=true
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# Authentication
JWT_SECRET=staging-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=staging@editorial-app.com
EMAIL_PASS=staging-email-password
EMAIL_FROM=Editorial App Staging <staging@editorial-app.com>

# Security
CORS_ORIGIN=https://staging.editorial-app.com
SECURE_COOKIES=true
CSRF_SECRET=staging-csrf-secret

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/staging.log

# Performance
CACHE_TTL=1800
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_REQUESTS=200
